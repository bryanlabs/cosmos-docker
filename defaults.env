# Common Cosmos Node Defaults
# This file contains default values that are common across all chains
# Individual chain .env files will override these values as needed

# Docker Compose Configuration
COMPOSE_FILE=cosmos.yml

# Default Core Configuration
USER=cosmos
DAEMON_HOME=/cosmos

# Default Data Directory
DATA_DIR=/mnt/data/blockchain/${NETWORK}

# Default Port Configuration
P2P_PORT=26656
RPC_PORT=26657
REST_PORT=1317
GRPC_PORT=9090
GRPC_WEB_PORT=9091
PROMETHEUS_PORT=26660

# Default Network Configuration
EXTERNAL_ADDRESS=auto
PERSISTENT_PEERS=

# Default Snapshot Configuration
SNAPSHOT=
SNAPSHOT_API_URL=
SNAPSHOT_BASE_URL=
FORCE_REBUILD=false

# Default State Sync Configuration
STATESYNC_ENABLE=false
STATESYNC_TRUST_HEIGHT=0
STATESYNC_TRUST_HASH=
STATESYNC_TRUST_PERIOD=360h0m0s
STATESYNC_DISCOVERY_TIME=15s
STATESYNC_CHUNK_REQUEST_TIMEOUT=10s
STATESYNC_CHUNK_FETCHERS=4

# Default P2P Settings
MAX_INBOUND_PEERS=40
MAX_OUTBOUND_PEERS=10
P2P_PEX=true
P2P_ADDR_BOOK_STRICT=false
P2P_FLUSH_THROTTLE_TIMEOUT=100ms
P2P_DIAL_TIMEOUT=3s
P2P_HANDSHAKE_TIMEOUT=20s
P2P_ALLOW_DUPLICATE_IP=true
PRIVATE_PEER_IDS=

# Default RPC Settings
RPC_CORS_ALLOWED_ORIGINS='["*"]'
RPC_MAX_OPEN_CONNECTIONS=2000
RPC_GRPC_MAX_OPEN_CONNECTIONS=2000

# Default Consensus Settings
CONSENSUS_TIMEOUT_COMMIT=5s
CONSENSUS_CREATE_EMPTY_BLOCKS=true
CONSENSUS_TIMEOUT_PROPOSE=3s
CONSENSUS_TIMEOUT_PROPOSE_DELTA=500ms
CONSENSUS_TIMEOUT_PREVOTE=1s
CONSENSUS_TIMEOUT_PREVOTE_DELTA=500ms
CONSENSUS_TIMEOUT_PRECOMMIT=1s
CONSENSUS_TIMEOUT_PRECOMMIT_DELTA=500ms

# Default Mempool Settings
MEMPOOL_SIZE=5000
MEMPOOL_CACHE_SIZE=10000
MEMPOOL_RECHECK=true
MEMPOOL_BROADCAST=true

# Default Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_LISTEN_ADDR=:26660
PROMETHEUS_NAMESPACE=tendermint

# Default FastSync and TX Index
FASTSYNC_VERSION=v0
TX_INDEX_INDEXER=kv

# Default Logging
LOG_LEVEL=info
NODE_LOG_FORMAT=plain

# Default Gas and Pruning (conservative defaults)
MIN_GAS_PRICE=0.025utoken
PRUNING_STRATEGY=default
PRUNING_KEEP_RECENT=362880
PRUNING_INTERVAL=100

# Default Build Configuration
EXTRA_FLAGS=
SCRIPT_TAG=
ENV_VERSION=1

# Default Additional Settings
DB_BACKEND=goleveldb
DB_DIR=data
ABCI=socket
FILTER_PEERS=false
NODE_HOST=http://cosmos:${RPC_PORT:-26657}

# Default WASM Configuration
WASM_MEMORY_CACHE_SIZE=2048
WASM_QUERY_GAS_LIMIT=300000000
WASM_SIMULATION_GAS_LIMIT=300000000
WASM_CONTRACT_DEBUG_MODE=false

# Default Halt Height Configuration  
HALT_HEIGHT=0